{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
        true,
        "attribute",
        "lgr",
        "camelCase"
    ],
    "component-selector": [
        true,
        "element",
        "lgr",
        "kebab-case"
    ],
    "no-input-rename": false,
    "no-output-rename": false,
    "curly": false,
    "no-trailing-whitespace": false,
    "comment-format": false,
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "member-ordering": [true, { "order": "instance-sandwich"} ]
  }
}
